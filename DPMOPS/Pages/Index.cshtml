@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var partialView = "_AnonymousHome";

    if (ViewData["UserType"] != null)
    {
        partialView = ViewData["UserType"] switch
        {
            "Citizen" => "_CitizenHome",
            "Provider" => "_ProviderHome",
            "Admin" => "_AdminHome",
            "Employee" => "_EmployeeHome",
            _ => "_AnonymousHome"
        };
    }
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <partial name="Partials/@partialView" />
</div>

