@page
@model DPMOPS.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Service Types";
}

<div class="panel panel-default table-panel">
    <h3>@ViewData["Title"]</h3>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Service Providers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var st in Model.ServiceTypes)
            {
                <tr>
                    <td>@st.Name</td>
                    <td>@st.NumberOfProviders</td>
                    <td>
                        <a asp-page="/ServiceTypes/EditServiceType" asp-route-id="@st.ServiceTypeId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="/ServiceTypes/DeleteServiceType" asp-route-id="@st.ServiceTypeId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-page="/ServiceTypes/AddServiceType" class="btn btn-primary">Add Service Type</a>
</div>
