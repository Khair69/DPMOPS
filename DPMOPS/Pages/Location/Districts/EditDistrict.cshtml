@page "{id}"
@model DPMOPS.Pages.Location.Districts.EditDistrictModel
@{
    ViewData["Title"] = "Edit district's info";
}

<div class="d-flex justify-content-between mb-3">
    <h3>@ViewData["Title"]</h3>
    <div>
        <a asp-page="/Location/Districts/Index" asp-route-cityId="@Model.DistrictDto.CityId" class="btn btn-secondary">Back to @Model.DistrictDto.CityName</a>
    </div>
</div>

<div class="col-md-4">
    <form asp-page="EditDistrict">
        <div class="form-group mb-3">
            <label asp-for="DistrictUpdateDto.CityId" class="control-label"></label>
            <select asp-for="DistrictUpdateDto.CityId" asp-items="Model.CityOptions" class="form-control">
            </select>
            <span asp-validation-for="DistrictUpdateDto.CityId" class="text-danger"></span>
        </div>        
        <div class="form-floating mb-3">
            <input asp-for="DistrictUpdateDto.Name" class="form-control" placeholder="Name" value="@Model.DistrictDto.Name" />
            <label asp-for="DistrictUpdateDto.Name"></label>
            <span asp-validation-for="DistrictUpdateDto.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
    </form>
