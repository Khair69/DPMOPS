@page
@model DPMOPS.Pages.Location.IndexModel
@{
    ViewData["Title"] = "المدن";
}

<div class="panel panel-default table-panel">
    <div class="d-flex justify-content-between mb-3">
        <h3>@ViewData["Title"]</h3>
        <div>
            <a asp-page="/Location/Cities/AddCity" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i>إضافة مدينة</a>
        </div>
    </div>

    <table class="table table-hover table-striped display" id="city-table">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>عدد المناطق</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Cities)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.DistrictCount</td>
                    <td>
                        <a asp-page="/Location/Districts/Index" asp-route-cityId="@c.CityId" class="btn btn-sm btn-outline-secondary">إدارة المناطق</a>
                        <a asp-page="EditCity"
                           asp-route-id="@c.CityId"
                           class="btn btn-sm btn-outline-warning"
                           title="Edit">
                            <i class="bi bi-pen-fill"></i>
                        </a>
                        <a asp-page="DeleteCity"
                           asp-route-id="@c.CityId"
                           class="btn btn-sm btn-outline-danger"
                           title="Delete">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Styles {
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/tableStyling.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/js/tableStyling.js" asp-append-version="true"></script>
}