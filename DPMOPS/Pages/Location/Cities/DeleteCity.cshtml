@page "{id}"
@model DPMOPS.Pages.Location.Cities.DeleteCityModel
@{
    ViewData["Title"] = "Delete city";
}

<h2>Delete Confirmation</h2>
<div class="alert alert-danger">
    Are you sure you want to delete @Model.City.Name? All the districts associated with it will be deleted too.
</div>

<form method="post">
    <input type="hidden" asp-for="cityId" value="@Model.City.CityId"/>
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-page="/Location/Cities/Index" class="btn btn-secondary">Cancel</a>
</form>