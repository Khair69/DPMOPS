@page "{code:int}"
@model ErrorModel
@{
    ViewData["Title"] = $"خطأ {Model.Code}";
}

<div>
    <div class="d-flex align-items-center justify-content-center px-2">
        <div class="text-center">
            <h1 class="display-1 fw-bold">@Model.Code</h1>
            <p class="fs-2 fw-medium mt-4">حدث خطأ!</p>
            @switch (Model.Code)
            {
                case 404:
                    <p class="mt-4 mb-5">الصفحة التي تبحث عنها غير موجودة</p>
                    break;
                case 500:
                    <p class="mt-4 mb-5">حدث خطأ في السيرفر</p>
                    break;
                case 400:
                    <p class="mt-4 mb-5">حدث خطأ في إجراء العملية, من فضلك اعد المحاولة</p>
                    break;
                default:
                    break;
            }
            <a href="/" class="btn btn-light fw-semibold rounded-pill px-4 py-2">
                العودة للصفحة الرئيسية
            </a>
        </div>
    </div>
</div>