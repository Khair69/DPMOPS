@using DPMOPS.Services.ServiceRequest.Dtos
@using Humanizer

<div class="container py-4">
    @{
        var data = ViewData["UserData"] as IList<ServiceRequestDto>;
    }
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            @if (data == null || data.Count == 0)
            {
                <h2 class="fw-bold mb-0">You haven't made any service requests</h2>
            }
            else
            {
                <h2 class="fw-bold mb-0">Your Recent Requests</h2>
            }
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <a asp-page="/ServiceRequest/Add" class="btn btn-outline-primary d-inline-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i>
                Make A Service Request
            </a>
        </div>
    </div>

    @if (data != null && data.Count > 0)
    {
        @foreach (var sr in data)
        {
            <div class="card mb-4 shadow-sm border-0">
                <div class="row g-0">
                    <!-- Image: 4:3 ratio -->
                    <div class="col-md-5">
                        <div class="ratio ratio-4x3 h-100">
                            <img src="@(string.IsNullOrEmpty(sr.PhotoPath) ? "/placeholder.jpg" : sr.PhotoPath)"
                                 class="img-fluid rounded-start object-fit-cover"
                                 alt="Image not available"
                                 asp-append-version="true">
                        </div>
                    </div>

                    <!-- Text Info -->
                    <div class="col-md-7">
                        <div class="card-body d-flex flex-column h-100">
                            <h4 class="card-title fw-bold">@sr.Title</h4>
                            <p class="card-text mb-2">@sr.Description</p>
                            <ul class="list-unstyled small text-muted mb-4">
                                <li><i class="bi bi-geo-alt-fill me-1"></i> @sr.Address, @sr.LocDescription</li>
                                <li><i class="bi bi-calendar-event me-1"></i> @sr.DateCreated.Humanize()</li>
                                <li><i class="bi bi-person-fill me-1"></i> Citizen: @sr.CitizenName</li>
                                <li><i class="bi bi-person-check-fill me-1"></i> Employee: @(sr.EmployeeId == null ? "Unassigned" : sr.EmployeeName)</li>
                                <li><i class="bi bi-building me-1"></i> Organization: @sr.OrganizationName</li>
                            </ul>
                            <div class="mt-auto text-end">
                                <a asp-page="/ServiceRequest/Info" asp-route-id="@sr.ServiceRequestId"
                                   class="btn btn-sm btn-outline-info d-inline-flex align-items-center gap-1 text-white">
                                    <i class="bi bi-info-circle"></i>
                                    Info
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>