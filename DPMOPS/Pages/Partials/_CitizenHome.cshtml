@using DPMOPS.Services.ServiceRequest.Dtos
@using Humanizer

@{
    ViewData["Title"] = "Home Page";
    var data = ViewData["UserData"] as IList<ServiceRequestDto>;
}
<div class="row align-items-center mb-4">
    <div class="col-md-6">
        @if (data == null || data.Count == 0)
        {
            <h2 class="fw-bold mb-0">You haven't made any requests</h2>
        }
        else
        {
            <h2 class="fw-bold mb-0">Your Submitted Requests</h2>
        }
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <a asp-page="/ServiceRequest/Add" class="btn btn-outline-primary d-inline-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i>
            Make A Service Request
        </a>
    </div>
</div>

<div class="container my-4">
    <div class="row g-4">
        @if (data != null && data.Count > 0)
        {
            @foreach (var sr in data)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card card-custom-bg h-100 shadow-sm d-flex flex-column">
                        <!-- Image: 4:3 ratio -->
                        <div class="ratio ratio-4x3 h-100">
                            <img src="@(string.IsNullOrEmpty(sr.PhotoPath) ? "/placeholder.jpg" : sr.PhotoPath)"
                                 class="object-fit-cover card-img-top"
                                 alt="Image not available"
                                 asp-append-version="true">
                        </div>


                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <h4 class="card-title fw-bold">@sr.Title</h4>
                            <p class="card-text flex-grow-1">@sr.Description</p>
                                <ul class="list-unstyled small text-muted fs-6">
                                    <li><i class="bi bi-geo-alt-fill me-1"></i>@sr.Address</li>
                                    <li><i class="bi bi-info me-1"></i>@sr.Status</li>
                                </ul>
                            <div class="position-absolute d-flex gap-2" style="bottom: 0.5rem; right: 0.5rem;">
                                <a asp-page="/ServiceRequest/Info" asp-route-id="@sr.ServiceRequestId"
                                   class="btn btn-sm btn-outline-info d-inline-flex align-items-center gap-1">
                                    <i class="bi bi-info-circle"></i>
                                    Info
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


