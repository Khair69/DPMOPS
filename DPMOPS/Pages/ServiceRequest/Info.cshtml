@page "{id}"
@model DPMOPS.Pages.ServiceRequest.InfoModel
@using Humanizer
@{
    ViewData["Title"] = "Request's Info";
}

<div class="container py-5">
    <div class="row align-items-stretch border rounded-3 shadow-sm overflow-hidden">
        <!-- Image on the Left -->
        <div class="col-lg-6 mb-4 mb-lg-0 p-0">
            <div class="ratio ratio-4x3">
                <img src="@(string.IsNullOrEmpty(Model.ServiceRequest.PhotoPath) ? "/placeholder.jpg" : Model.ServiceRequest.PhotoPath)"
                     class="img-fluid rounded shadow-sm object-fit-cover"
                     alt="Image not available"
                     asp-append-version="true">
            </div>
        </div>

        <!-- Content on the Right -->
        <div class="col-lg-6 position-relative">
            <!-- Delete Button -->
            @if (Model.DeleteVisible)
            {
                <a asp-page="Delete"
                   asp-route-id="@Model.ServiceRequest.ServiceRequestId"
                   class="btn btn-sm btn-outline-danger position-absolute top-0 end-0 m-2"
                   title="Delete">
                    <i class="bi bi-trash-fill"></i>
                </a>
            }
            <!-- Text Content -->
            <h1 class="display-5 fw-bold">@Model.ServiceRequest.Title</h1>
            <p class="lead mt-3">@Model.ServiceRequest.Description</p>

            <!-- List of Details -->
            <ul class="list-unstyled small text-muted fs-6">
                <li><i class="bi bi-geo-alt-fill me-1"></i> @Model.ServiceRequest.Address, @Model.ServiceRequest.LocDescription</li>
                <li><i class="bi bi-calendar-event me-1"></i> @Model.ServiceRequest.DateCreated.Humanize()</li>
                <li><i class="bi bi-person-fill me-1"></i> Submitted by: @Model.ServiceRequest.CitizenName</li>
                <li><i class="bi bi-person-check-fill me-1"></i> Employee: @(Model.ServiceRequest.EmployeeId == null ? "Unassigned" : Model.ServiceRequest.EmployeeName)</li>
                <li><i class="bi bi-building me-1"></i> Organization: @Model.ServiceRequest.OrganizationName</li>
                @*status*@
            </ul>

            <div class="mt-auto pt-3">

                @if (Model.ClaimVisible)
                {
                    <a asp-page="Claim" asp-route-id="@Model.ServiceRequest.ServiceRequestId" class="btn btn-primary w-100 mb-3">Claim</a>
                }

                @if (Model.StatusVisible)
                {
                    <form asp-page="Info" asp-page-handler="Status">
                        <div class="form-floating mb-3">
                            <select asp-for="ChangeStatus.StatusId" asp-items="Html.GetEnumSelectList<Models.Status>()" class="form-select">
                            </select>
                            <label asp-for="ChangeStatus.StatusId">Status</label>
                            <span asp-validation-for="ChangeStatus.StatusId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary w-100">Save</button>
                    </form>
                }

            </div>
        </div>
    </div>
</div>


