@page "{category?}"
@using Humanizer
@model DPMOPS.Pages.ServiceRequest.ByOrgModel
@{
    ViewData["Title"] = "طلباتك";
}

<div class="panel panel-default table-panel">
    @if (Model.Requests.Count() == 0) {
        <h2 class="fw-bold mb-4">لا يوجد طلبات</h2>
    }
    else if (Model.Requests!=null){
    <h3>كل طلبات الخدمة في مؤسستك</h3>

    <table class="table table-hover table-striped display" id="request-table">
        <thead>
            <tr>
                <th>العنوان</th>
                <th>الوصف</th>
                <th>الموقع</th>
                <th>وصف الموقع</th>
                <th>المواطن</th>
                <th>الموظف</th>
                <th>التاريخ</th>
                <th>الحالة</th>
                <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sr in Model.Requests)
            {
                <tr>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.Title</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.Description</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.Address</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.LocDescription</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.CitizenName</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.EmployeeName</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.DateCreated.Humanize(culture: new System.Globalization.CultureInfo("ar"))</a></td>
                    <td><a asp-page="Info" asp-route-id="@sr.ServiceRequestId" class="text-decoration-none text-white">@sr.Status</a></td>
                    <td>
                            @if (sr.EmployeeId == null)
                            {
                                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#assignModal" onclick="loadAssignModal('@sr.ServiceRequestId')">تعيين موظف</button>
                            }
                        </td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>

<!--Assign Modal-->
<div class="modal fade" id="assignModal" tabindex="-1" aria-labelledby="assignEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-4">
            <div class="modal-header">
                <h5 class="modal-title" id="assignModalLabel">تعيين موظف</h5>
                <button type="button" class="btn-close position-absolute top-0 start-0 m-2" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <iframe id="assignFrame" style="border:0; height:200px"></iframe>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/tableStyling.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/js/tableStyling.js" asp-append-version="true"></script>
    <script src="~/js/assignModal.js" asp-append-version="true"></script>
}
