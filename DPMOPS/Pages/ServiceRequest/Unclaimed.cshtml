@page
@using Humanizer
@model DPMOPS.Pages.ServiceRequest.UnclaimedModel
@{
    ViewData["Title"] = "Service Requests";
}

<div class="container py-4">
    <h2 class="mb-4 text-center fw-bold">Inbox</h2>

    @if (Model.ServiceRequests != null && Model.ServiceRequests.Any())
    {
        <div class="row g-4">
            @foreach (var request in Model.ServiceRequests)
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="row g-0 align-items-center">
                            <div class="col-auto">
                                <img src="@request.PhotoPath" alt="Request photo" class="img-thumbnail thumbnail-img me-3 p-0">
                            </div>
                            <div class="col">
                                <div class="card-body py-2 px-0">
                                    <h5 class="card-title fw-bold mb-1">@request.Title</h5>
                                    <p class="card-text mb-2">@request.Description</p>
                                    <p class="card-text text-muted small">
                                        Submitted By: @request.CitizenName | Location: @request.Address | Date: @request.DateCreated.Humanize()
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No requests at the moment.
        </div>
    }
</div>
