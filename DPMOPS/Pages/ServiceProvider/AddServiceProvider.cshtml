@page "{id}"
@model DPMOPS.Pages.ServiceProvider.AddServiceProviderModel
@{
    ViewData["Title"] = "Add a service provider";
}

<h1>Make @Model.Account.FirstName @Model.Account.LastName a provider:</h1>

<div class="col-md-4">
    <form asp-page="AddServiceProvider">
        <div class="form-group mb-3">
            <label asp-for="SpDto.ServiceTypeId" class="control-label"></label>
            <select asp-for="SpDto.ServiceTypeId" asp-items="Model.ServiceTypeOptions" class="form-control">
                <option value=" ">-- Select Service Type --</option>
            </select>
            <span asp-validation-for="SpDto.ServiceTypeId" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Enter</button>
    </form>
</div>

