@page "{id}"
@model DPMOPS.Pages.ServiceProvider.EditServiceProviderModel
@{
    ViewData["Title"] = "Edit service provider's info";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <form asp-page="EditServiceProvider">
        <div class="form-group mb-3">
            <label asp-for="SpUpdateDto.ServiceTypeId" class="control-label"></label>
            <select asp-for="SpUpdateDto.ServiceTypeId" asp-items="Model.ServiceTypeOptions" class="form-control">
                <option value=" ">-- Select Service Type --</option>
            </select>
            <span asp-validation-for="SpUpdateDto.ServiceTypeId" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
    </form>
</div>