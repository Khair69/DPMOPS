@page "{id}"
@model DPMOPS.Pages.Organization.EditOrganizationModel
@{
    ViewData["Title"] = "Edit organization's info";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <form asp-page="EditOrganization">
        <div class="form-floating mb-3">
            <input asp-for="OrgUpdateDto.Name" class="form-control" placeholder="Name" value="@Model.OrgDto.Name" />
            <label asp-for="OrgUpdateDto.Name"></label>
            <span asp-validation-for="OrgUpdateDto.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
    </form>
</div>