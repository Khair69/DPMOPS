@page "{id}"
@model DPMOPS.Pages.Organization.Employees.IndexModel
@{
    ViewData["Title"] = "الموظفين";

}

<div class="panel panel-default table-panel">
    <div class="d-flex justify-content-between mb-3">
        <div class="panel-heading"><h3>حسابات الموظفين</h3></div>
            <div>
            <a asp-area="Identity" asp-page="/Account/RegisterEmployee" asp-route-orgId="@Model.OrgId" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i>إضافة موظفين</a>
            </div>
    </div>
    @if (Model.Employees.Any())
    {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>البريد الالكتروني</th>
                        <th>تاريخ الانشاء</th>
                        <th>العنوان</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Employees)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.DateCreated.Date.ToString("dd/MM/yyyy")</td>
                            <td>@user.District.City.Name, @user.District.Name</td>
                            <td>
                                <a asp-page="" class="btn btn-sm btn-outline-secondary">التحويل لأدمن</a>
                                <a asp-page="" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    }
    else
    {
        <div class="alert alert-info">لا يوجد موظفين</div>
    }
</div>


<div class="panel panel-default table-panel">
    <div class="d-flex justify-content-between mb-3">
        <div class="panel-heading"><h3>حسابات الأدمن</h3></div>
        <a asp-area="Identity" asp-page="/Account/RegisterOrgAdmin" asp-route-orgId="@Model.OrgId" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i>إضافة أدمن</a>
    </div>
    @if (Model.Admins.Any())
    {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>البريد الالكتروني</th>
                        <th>تاريخ الانشاء</th>
                        <th>العنوان</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Admins)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.DateCreated.Date.ToString("dd/MM/yyyy")</td>
                            <td>@user.District.City.Name, @user.District.Name</td>
                            <td>
                                <a asp-page="" class="btn btn-sm btn-outline-secondary">الإزالة كأدمن</a>
                                <a asp-page="" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                    </tr>
                    }
                </tbody>
            </table>
    }
    else
    {
        <div class="alert alert-info">لا يوجد أدمن</div>
    }
</div>
