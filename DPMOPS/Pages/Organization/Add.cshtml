@page
@model DPMOPS.Pages.Organization.AddModel
@{
    ViewData["Title"] = "إضافة مؤسسة";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 order-1 order-md-1">
        <form asp-page="Add" class="w-75">
            <hr />
            <div class="form-floating mb-3">
                <input asp-for="OrgDto.Name" class="form-control" placeholder="Name" />
                <label asp-for="OrgDto.Name"></label>
                <span asp-validation-for="OrgDto.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="OrgDto.CityId" asp-items="Model.CityOptions" class="form-select">
                    <option value=" "> </option>
                </select>
                <label asp-for="OrgDto.CityId" class="control-label"></label>
                <span asp-validation-for="OrgDto.CityId" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">إضافة</button>
        </form>
    </div>

    <!-- Image Column -->
    <div class="col-md-6 order-2 order-md-2 d-flex align-items-center justify-content-center">
        <img src="~/images/addOrg.png" alt="Illustration" class="img-fluid rounded">
    </div>
</div>