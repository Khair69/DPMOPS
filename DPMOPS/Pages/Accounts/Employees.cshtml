@page
@model DPMOPS.Pages.Accounts.EmployeesModel
@{
    ViewData["Title"] = "الموظفين";
}

@if (Model.Employees.Any())
{
    <div class="panel panel-default table-panel">
        <div class="panel-heading"><h3>حسابات المواطنين</h3></div>
        <table class="table table-hover table-striped display" id="account-table">
            <thead>
                <tr>
                    <th>الاسم</th>
                    <th>البريد الالكتروني</th>
                    <th>المؤسسة</th>
                    <th>عدد الطلبات</th>
                    <th>العنوان</th>
                    <th>رقم المحمول</th>
                    <th>تاريخ اللإنشاء</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model.Employees)
                {
                    <tr>
                        <td>@emp.FullName</td>
                        <td>@emp.Email</td>
                        <td>@emp.OrganizationName</td>
                        <td>@emp.NumberOfRequests</td>
                        <td>@emp.Address</td>
                        <td>@emp.PhoneNumber</td>
                        <td>@emp.DateCreated.Date.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">لا يوجد مستخدمين</div>
}

@section Styles {
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/tableStyling.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/js/tableStyling.js" asp-append-version="true"></script>
}