@page
@model DPMOPS.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Manage Accounts";
}

@if (Model.Users.Any())
{
    <div class="panel panel-default table-panel">
        <div class="panel-heading"><h3>Regular Accounts:</h3></div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Type</th>
                    <th>Date of Birth</th>
                    <th>Date Created</th>
                    <th>Location</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (user, loc, typ) in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@typ</td>
                        <td>@user.DateOfBirth.Date.ToString("dd/MM/yyyy")</td>
                        <td>@user.DateCreated.Date.ToString("dd/MM/yyyy")</td>
                        <td>@loc</td>
                        <td><a asp-page="/Accounts/MakeAdmin" asp-route-id=@user.Id class="w-100 btn btn-primary">Make Admin</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="panel-heading"><h3>Regular Accounts:</h3></div>
    <div class="alert alert-info">No users found.</div>
}

@if (Model.Admins.Any())
{
    <div class="panel panel-default table-panel">
        <div class="panel-heading"><h3>Admin Accounts:</h3></div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Date Created</th>
                    <th>Location</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (user, loc) in Model.Admins)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.DateOfBirth.Date.ToString("dd/MM/yyyy")</td>
                        <td>@user.DateCreated.Date.ToString("dd/MM/yyyy")</td>
                        <td>@loc</td>
                        <td><a asp-page="/Accounts/RemoveAdmin" asp-route-id=@user.Id class="w-100 btn btn-danger btn-danger">Remove Admin</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="panel-heading"><h3>Admin Accounts:</h3></div>
    <div class="alert alert-info">No users found.</div>
}

